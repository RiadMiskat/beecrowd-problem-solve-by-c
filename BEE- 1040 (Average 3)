#include<stdio.h>
int main(){
    float salary,insalary;
    scanf("%f",&salary);
    if(0<salary && salary<=400.00){
        insalary = salary*15/100;
        printf("Novo salario: %.2f\n",salary+insalary);
        printf("Reajuste ganho: %.2f\n",insalary);
        printf("Em percentual: 15 %c\n",'%');
        
    }
     else if(400<salary && salary<=800.00){
        insalary = salary*12/100;
        printf("Novo salario: %.2f\n",salary+insalary);
        printf("Reajuste ganho: %.2f\n",insalary);
        printf("Em percentual: 12 %c\n",'%');
        
    }
      else if(800<salary && salary<=1200.00){
        insalary = salary*10/100;
        printf("Novo salario: %.2f\n",salary+insalary);
        printf("Reajuste ganho: %.2f\n",insalary);
        printf("Em percentual: 10 %c\n",'%');
        
    }
      else if(1200<salary && salary<=2000.00){
        insalary = salary*7/100;
        printf("Novo salario: %.2f\n",salary+insalary);
        printf("Reajuste ganho: %.2f\n",insalary);
        printf("Em percentual: 7 %c\n",'%');
        
    }
    else {
       insalary = salary*4/100;
        printf("Novo salario: %.2f\n",salary+insalary);
        printf("Reajuste ganho: %.2f\n",insalary);
        printf("Em percentual: 4 %c\n",'%'); 
    }
    
    
    
}
